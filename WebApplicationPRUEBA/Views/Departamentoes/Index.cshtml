@model IEnumerable<WebApplicationPRUEBA.Models.Departamento>

@{
    ViewBag.Title = "Index";
}
<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/DepartamentosDesing.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
</head>
    <body class="Parallax">
   
       <br />
        <br />
        <h2><a href="/Departamentoes/Create"><input type="submit" value="Adquirir Departamento" class="btn btn-default" /></a></h2>

        <p>

        </p>
        <table class="table table-bordered text-contene">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.codigoDepartamento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.idManager)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.codigoDepartamento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.idManager)
                    </td>
                    <td>
                        <button>
                            @Html.ActionLink("Edit", "Edit", new { id = item.id })
                        </button>
                        <button>
                            @Html.ActionLink("Details", "Details", new { id = item.id })
                        </button>
                        <button>
                            @Html.ActionLink("Delete", "Delete", new { id = item.id })
                        </button>
                    </td>
                </tr>
            }

        </table>


    </body>
</html>